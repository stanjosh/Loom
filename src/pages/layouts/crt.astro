---

import BaseLayout from "./BaseLayout.astro"




---
	<BaseLayout>
    <div class="crt-frame">
			<div class="crt">
				<slot />
			</div>
    </div>
  </BaseLayout>


  <style>
    .crt-frame {
    border-color: rgb(32, 32, 32) rgb(44, 44, 44)  rgb(51, 50, 50) rgb(39, 39, 39);
    border-width: 25px;
    border-style: solid;
    position: absolute;
    left: 50%;
    bottom: 50%;
    transform: translate(-50%, 50%) ;
    border-radius: var(--crt-border-radius);
    filter: drop-shadow(0 0 1.75rem var(--crt-glow));
  }

  .crt  {
    font-family: 'Tandy', monospace;
    font-size: 10px;
    min-width: 640px;
    min-height: 480px;

    padding: var(--crt-padding);
    background-color: var(--crt-background);
    color: var(--crt-text);
    filter: contrast(1.6) brightness(1.1) saturate(1.2);
    text-rendering: geometricPrecision;
  }




  .crt::before {
    content: " ";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;

    background: 
    var(--green-pixels);

    z-index: 2;
    background-size: 100% 2px, 3px 100%;
    pointer-events: none;
    border-radius: var(--crt-border-radius);
  }



  .crt::after {
    content: " ";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.1);
    opacity: 0;
    z-index: 2;
    pointer-events: none;
    animation: flicker 0.15s infinite;
    border-radius: var(--crt-border-radius);

  }
@media screen and (prefers-reduced-motion: reduce) {
  .crt::after {
    animation: none;
  }
}

@media screen and (max-width: 768px) {
  .crt-frame {
    border: 0;
    transform: none;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }
  .crt {
    width: 100%;
    height: 100%;
    min-height: 100vh;
    min-width: 100vw;
  }



  </style>